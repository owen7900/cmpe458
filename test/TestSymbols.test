#! /bin/bash

echo "---------Testing Symbols------------"

echo "   '#' should emit pStrLen:"

ssltrace "./ptc -t1 -o1 hash.pt" ../lib/pt/scan.def -e > hash.eOutput 2> /dev/null

if [ $(grep -c '.StrLen' hash.eOutput) -eq 1 ]; then
    echo "      SUCCESS"
else
    echo "      FAILED"
fi


